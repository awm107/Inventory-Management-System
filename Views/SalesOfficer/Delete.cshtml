@model InventoryManagement.ViewModels.SalesOfficerDeleteViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var photoPath = "~/images/" + (Model.SalesOfficer.Photopath ?? "noimage.jpg");
}

<h2 class="text-danger">Delete SalesOfficer</h2>

<div>
    <h3 class=" text-danger">Are you sure you want to delete this SalesOfficer?</h3>
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Model.SalesOfficer.Name</h1>
                </div>

                <div class="card-body text-center">
                    <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                    <h4>SalesOfficer ID : @Model.SalesOfficer.Id</h4>
                    <h4>Email : @Model.SalesOfficer.Email</h4>
                    <h4>Address : @Model.SalesOfficer.Address</h4>
                    <h4>Gender : @Model.SalesOfficer.Gender</h4>
                    <h4>CNIC : @Model.SalesOfficer.CNIC</h4>

                </div>
                <div class="card-footer text-center">
                    <a asp-controller="SalesOfficer" asp-action="index" class="btn btn-primary">Back</a>
                    <form asp-controller="SalesOfficer" asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.SalesOfficer.Id" />
                        <span id="confirmDeleteSpan_@Model.SalesOfficer.Id" style="display:none">
                            <br />
                            <span>Are you sure you still want to delete?</span>
                            <br />
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <a href="#" class="btn btn-primary"
                               onclick="confirmDelete('@Model.SalesOfficer.Id', false)">No</a>
                        </span>

                        <span id="deleteSpan_@Model.SalesOfficer.Id">
                            <a href="#" class="btn btn-danger"
                               onclick="confirmDelete('@Model.SalesOfficer.Id', true)">Delete</a>
                        </span>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
