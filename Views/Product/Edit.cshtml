@model InventoryManagement.ViewModels.ProductEditViewModel

@{
    ViewBag.Title = "Edit Product";
}

<form asp-controller="Product" asp-action="edit" enctype="multipart/form-data" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <input hidden asp-for="Id" />

    <div class="form-group row">
        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductName" class="form-control" placeholder="Product Name">
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="PurchasedPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="PurchasedPrice" class="form-control" placeholder="Purchased Price">
            <span asp-validation-for="PurchasedPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="SalesPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SalesPrice" class="form-control" placeholder="Sales Price">
            <span asp-validation-for="SalesPrice" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ProdType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="ProdType" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<InventoryManagement.Models.ProductType>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="ProdType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CreatedBy" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CreatedBy" disabled class="form-control" placeholder="Created By">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="ModifiedBy" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ModifiedBy" class="form-control" placeholder="Modified By">
            <span asp-validation-for="ModifiedBy" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Quantity" class="form-control" placeholder="Quantity">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Status" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="form-check">
                <input asp-for="Status" type="radio" value="true" id="isStatusActive" class="form-check-input" />
                <label class="form-check-label" for="isStatusActive">Active</label>
            </div>
            <div class="form-check">
                <input asp-for="Status" type="radio" value="false" id="isStatusInactive" class="form-check-input" />
                <label class="form-check-label" for="isStatusInactive">Inactive</label>
            </div>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="index" asp-controller="Product" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>
