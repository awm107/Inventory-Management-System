@model InventoryManagement.ViewModels.ProductDeleteViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger">Delete product</h2>

<div>
    <h3 class=" text-danger">Are you sure you want to delete this Product?</h3>
    <div class="row justify-content-center m-3">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Product.ProductName</h1>
            </div>

            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Product ID</td>
                            <td>@Model.Product.Id</td>
                        </tr>
                        <tr>
                            <td>Description</td>
                            <td>@Model.Product.Description</td>
                        </tr>
                        <tr>
                            <td>Purchased Price</td>
                            <td>@Model.Product.PurchasedPrice</td>
                        </tr>
                        <tr>
                            <td>Sales Price</td>
                            <td>@Model.Product.SalesPrice</td>
                        </tr>
                        <tr>
                            <td>Created By</td>
                            <td>@Model.Product.CreatedBy</td>
                        </tr>
                        <tr>
                            <td>Created Date</td>
                            <td>@Model.Product.CreatedDate</td>
                        </tr>
                        <tr>
                            <td>Modified By</td>
                            <td>@Model.Product.ModifiedBy</td>
                        </tr>
                        <tr>
                            <td>Modified Date</td>
                            <td>@Model.Product.ModifiedDate</td>
                        </tr>
                        <tr>
                            <td>Product Type</td>
                            <td>@Model.Product.ProdType.ToString()</td>
                        </tr>
                        <tr>
                            <td>Quantity</td>
                            <td>@Model.Product.Quantity</td>
                        </tr>
                        <tr>
                            <td>Status</td>
                            <td>@Model.Product.Status</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="product" asp-action="index" class="btn btn-primary">Back</a>
                <form asp-controller="product" asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Product.Id" />
                    <span id="confirmDeleteSpan_@Model.Product.Id" style="display:none">
                        <br />
                        <span>Are you sure you still want to delete?</span>
                        <br />
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <a href="#" class="btn btn-primary"
                           onclick="confirmDelete('@Model.Product.Id', false)">No</a>
                    </span>

                    <span id="deleteSpan_@Model.Product.Id">
                        <a href="#" class="btn btn-danger"
                           onclick="confirmDelete('@Model.Product.Id', true)">Delete</a>
                    </span>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
